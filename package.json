{
  "name": "crypto-steel",
  "version": "2.0.0",
  "description": "Crypto Ticker for your SteelSeries gear",
  "main": "app/main.js",
  "repository": "",
  "keywords": [],
  "author": "Darren Schueller",
  "license": "Apache-2.0",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.7.0",
    "@types/electron": "^1.6.10",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.6.3",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^20.0.0",
    "electron-builder": "^23.3.3",
    "esbuild": "^0.14.53",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.26.0",
    "parcel": "^2.7.0",
    "process": "^0.11.10",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "bitwise": "^2.1.0",
    "cryptofont": "^0.1.1",
    "electron-log": "^4.4.8",
    "got": "^11.8.5",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "swiper": "^8.4.4",
    "ws": "^8.8.1"
  },
  "build": {
    "appId": "bigfoot.crypto-steel",
    "files": [
      "app/**/*",
      "assets/**/*"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "icon": "build/icon.png"
    }
  },
  "overrides": {
    "got": "^11.8.5",
    "minimatch": "5.1.0"
  },
  "targets": {
    "main": {
      "context": "electron-main",
      "source": "src/main/main.ts",
      "distDir": "./app"
    },
    "renderer": {
      "source": "src/render/index.html",
      "distDir": "./app/render",
      "publicUrl": "."
    },
    "preload": {
      "context": "electron-main",
      "source": "src/preload/preload.ts",
      "distDir": "./app"
    }
  },
  "scripts": {
    "clean": "rimraf app dist/**/* .parcel-cache",
    "superclean": "npm run clean && rimraf package-lock.json node_modules",
    "build": "tsc && parcel build --target renderer",
    "watch-main": "tsc -w",
    "watch-render": "parcel watch --target renderer",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./app/main.js",
    "pack": "npm run clean && parcel build",
    "dist": "npm run pack && electron-builder"
  }
}
