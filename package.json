{
  "name": "crypto-steel",
  "version": "1.1.0",
  "description": "Crypto Ticker for your SteelSeries gear",
  "main": "./app/main.js",
  "scripts": {
    "clean": "rimraf app dist",
    "superclean": "npm run clean && rimraf package-lock.json node_modules",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./app/main.js",
    "pack": "npm run clean && npm run build && electron-builder --dir",
    "dist": "npm run clean && npm run build && electron-builder"
  },
  "repository": "",
  "keywords": [],
  "author": "Darren Schueller",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron-builder": "^23.3.3",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.26.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bitwise": "^2.1.0",
    "cryptofont": "^0.1.1",
    "electron": "^20.0.0",
    "electron-log": "^4.4.8",
    "got": "^11.8.5",
    "lodash": "^4.17.21",
    "ws": "^8.8.1"
  },
  "build": {
    "appId": "bigfoot.crypto-steel",
    "files": [
      "!**/*.map",
      "!**/source/*",
      "!.vscode",
      "!workspace.code-workspace",
      "!tsconfig.json",
      "!**/*.md",
      "!**/LICENSE"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "icon": "build/icon.png"
    }
  },
  "overrides": {
    "got": "^11.8.5"
  }
}
